<div class="container d-flex flex-column">
  <h1>Available photographers in you area</h1>
  <% @portfolios.each do |portfolio| %>
    <div class="d-flex my-1 border">
      <div class="index-image">
        <%#= cl_image_tag 'r2udtt8ocgt13t5k87sa2wp8zp7n', class: "index-photo pr-2" %>
        <% portfolio.photos.each_with_index do |photo, index|%>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <%= cl_image_tag photo.key, class: "index-photo pr-2" %>
          </div>
        <% end %>
      </div>
      <%#= image_tag "https://images.unsplash.com/photo-1593099295589-ee5c1aa4164f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2736&q=80", class: 'index-avatar mb-2', width: '70px', height: '70px'%>
      <%= link_to portfolio_path(portfolio), target: :_blank, class: "index-link", onmouseover: "openProfile(event, #{portfolio.id})" do %>
        <div class="" id="index-cards">
          <h2 class="" id="index-photographer"><%= portfolio.user.full_name %></h2>
          <%= image_tag 'star.png', width: '50px', height: '20px', class: "mb-3" %>
          <div id="index-price"> <strong> $ <%= portfolio.price %> </strong><span class=""> /day</span></div>
          <p id="index-user">Listed by: <%= portfolio.user.email %></p>
          <p id="index-description"> <%= portfolio.description&.truncate(140, separator: " ") %> </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


