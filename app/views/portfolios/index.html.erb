<div class="container d-flex flex-column">
  <h1 class="pb-4">Available photographers in you area</h1>

  <% @portfolios.each do |portfolio| %>
    <div class=" my-3 border entire-card">

      <div class="index-image">
        <%#= cl_image_tag 'r2udtt8ocgt13t5k87sa2wp8zp7n', class: "index-photo pr-2" %>
        <div id="carouselExampleIndicators<%= portfolio.id %>" class="carousel slide" data-interval="false">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators<%= portfolio.id %>" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators<%= portfolio.id %>" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators<%= portfolio.id %>" data-slide-to="2"></li>
              <li data-target="#carouselExampleIndicators<%= portfolio.id %>" data-slide-to="3"></li>
              <li data-target="#carouselExampleIndicators<%= portfolio.id %>" data-slide-to="4"></li>
              <li data-target="#carouselExampleIndicators<%= portfolio.id %>" data-slide-to="5"></li>
            </ol>
          <div class="carousel-inner">
            <% portfolio.photos.each_with_index do |photo, index|%>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= cl_image_tag photo.key, class: "index-photo pr-" %>
              </div>
            <% end %>
          </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators<%= portfolio.id %>" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators<%= portfolio.id %>" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
      </div>

      <div class="index-avatar">
        <% if portfolio.user.photo.attached? %>
          <%= cl_image_tag portfolio.user.photo.key, class: 'index-avatar-photo mb-2', width: '60px', height: '60px' %>
        <% else %>
          <%= image_tag "https://images.unsplash.com/photo-1593099295589-ee5c1aa4164f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2736&q=80", class: 'preview-avatar', width: '60px', height: '60px'%>
        <% end %>
      </div>

      <%= link_to portfolio_path(portfolio), class: "index-link pl-3" do %>
        <div class="pl-3" id="index-cards">
          <div class="d-flex">
            <h2 class="" id="index-photographer"><%= portfolio.user.full_name %></h2>


          </div>
          <%#= image_tag 'star.png', width: '50px', height: '20px', class: "" %>
          <p> <i class="fas fa-star"></i> <%= portfolio.average_rating %> (<%= portfolio.reviews.count%> <%= portfolio.reviews.count > 1 ? "reviews" : "review" %>)</p>
          <div id="index-price"> <strong> $ <%= portfolio.price %> </strong><span class=""> /day</span></div>
          <p id="index-user">Listed by: <%= portfolio.user.email %></p>
          <p id="index-description"> <%= portfolio.description&.truncate(220, separator: " ") %> </p>
        </div>
      <% end %>
      <div id="portfolio-favorites-<%= portfolio.id %>" class="index-favorites">
        <%= render 'favorites/favoriteJS', portfolio: portfolio %>
      </div>
    </div>
  <% end %>

</div>








