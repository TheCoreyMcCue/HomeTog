<div class="container-fluid">
  <div class="row ml-1">
    <div class="scroll col-12 col-md-6">
      <% @portfolios.each do |portfolio| %>
        <%= link_to portfolio_path(portfolio), class: "index-cards tablinks", onmouseover: "openProfile(event, #{portfolio.id})" do %>
          <div class="card" id="index-cards">
            <div class="card-product-infos">
              <div class="d-flex">
                <% if  portfolio.photos.attached? %>
                  <%= cl_image_tag portfolio.photo.key, height: 250, width: 200, crop: :fill %>
                  <% else %>
                  <%= cl_image_tag 'r2udtt8ocgt13t5k87sa2wp8zp7n', height: 250, width: 200, crop: :fill %>
                <% end %>
                <div class="card-body">

                  <h2 class="mb-5" id="index-photographer"><%= portfolio.name.capitalize %></h2>


                 <!--  <p id="index-description"> <%= portfolio.description&.truncate(155, separator: " ") %> </p> -->


                  <div id="index-price"> â‚¬ <%= portfolio.price %> <span class=""> /day</span></div>
                  <p id="index-user">Listed by: <%= portfolio.user.email %></p>
                  <%= image_tag 'star.png', width: '60px', height: 'auto', class: "pt-3" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="border-left col-md-6" id="portfolio-preview">
      <section>
        <% @portfolios.each do |portfolio| %>
          <div id="<%= portfolio.id %>" class="tabcontent">
            <div>
              <h2 class="mb-3" id="preview-header"> <%= portfolio.name %> </h2>
              <% if portfolio.favorited?(current_user) %>
                    <%= link_to favorite_path(portfolio.favorited?(current_user)), method: :delete do  %>
                      <i class="fas fa-heart mr-3" style="color: red"></i>
                    <% end %>
                  <% else %>
                    <%= link_to(portfolio_favorites_path(portfolio), method: :post) do %>
                      <i class="far fa-heart mr-3" style="color: black"></i>
                    <% end %>
                  <% end %>
              <%#= image_tag 'avatar-pic.png', width: '100px', height: 'auto', class: "pt-3" %>
            </div>
            <p id="index-description"><%= portfolio.description&.truncate(140, separator: " ") %></p>
            <div id="carouselExampleControls<%= portfolio.id %>" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
              <% portfolio.photos.each_with_index do |photo, index|%>
                  <div class="carousel-item <%= 'active' if index == 0 %>">
                    <%= cl_image_tag photo.key, class: "d-block w-100", height: 550, width: 600, crop: :fill %>
                  </div>
              <% end %>
              </div>
                <a class="carousel-control-prev" href="#carouselExampleControls<%= portfolio.id %>" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls<%= portfolio.id %>" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
            </div>
            <%= link_to "Book This Photographer!", portfolio_path(portfolio), class: "btn btn-primary mt-3 mx-5 px-5 mt-5" %>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
