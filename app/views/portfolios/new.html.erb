<div class="new-portfolio-bg py-5">
  <div class="container new-portfolio-form">
    <h1 class="pl-2">Create Your Portfolio</h1>

    <div class="container">
      <%= simple_form_for @portfolio do |f| %>
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :description %>
        <%= f.input :price %>
      <label class="btn btn-info">
        <i class="fas fa-images"></i> Add photos to your portfolio
        <span style="display:none;">
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        </span>
      </label>

        <div class="d-flex">
          <%= f.submit "Create Portfolio", class:'btn btn-primary' %>
          <% if action_name == 'edit' %>
            <%= link_to(chair, method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2") do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
