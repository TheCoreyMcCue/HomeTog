<div class="container">
  <div class="h1-favorite-wrapper d-flex mx-1">
    <div class="w-100">
      <h1>
        <%= @portfolio.name %>
      </h1>
    </div>

      <i class="far fa-heart">
      </i>
  </div>

  <div id="carouselExampleControls<%= @portfolio.id %>" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @portfolio.photos.each_with_index do |photo, index|%>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <%= cl_image_tag photo.key, class: "d-block w-100", class: "show-page-image-design" %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls<%= @portfolio.id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls<%= @portfolio.id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>


  <%#= cl_image_tag @portfolio.photo.key, class: "show-page-image-design" %>

  <div class="d-flex mt-4 show-card-wrapper">
    <div class="content-wrapper">
      <div class="d-flex flex-column">
        <div class="d-flex ">
          <%= image_tag 'photographer-one.jpg', class: "testimony-avatar show-page-avatar" %>
          <div class="photographer-name-location-wrapper">
            <h2 class="pl-3 pt-2">
              <%= @portfolio.name %>
            </h2>
            <p class="pl-3">
              Located in <%= @portfolio.location %>
            </p>
          </div>
        </div>
        <div class="description-container">
          <p class="mt-3">
          <%= @portfolio.description&.truncate(450, separator: " ") %>
        </p>
        </div>
      </div>

    </div>

    <div class="reservation-form">
      <%= simple_form_for ([@portfolio, @reservations]) do |f| %>
        <%= f.input :date, as: :date %>
        <%= f.input :total_price, disabled: true %>
        <%= f.submit "Book Now", class:"btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>

 <!--  <div class="chat-wrapper mt-5">
    <div class="chatbox">
      <form action="#" method="post">
        <input type="text" id="message" name="message" class="p-2">
        <input type="submit" value="Send" class="btn btn-primary p-2">
      </form>
    </div>
  </div> -->




  <div class="d-flex">
    <% if policy(@portfolio).update? %>
    <div class="mx-2">
    <%= link_to(edit_portfolio_path(@portfolio)) do %>
      <i class="far fa-edit"></i>
    <% end %>
    </div>
    <% end %>

  <% if policy(@portfolio).destroy? %>
    <div>
      <%= link_to(@portfolio, method: :delete, data: { confirm: 'Are you sure?' }) do %>
        <i class="far fa-trash-alt">
        </i>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
