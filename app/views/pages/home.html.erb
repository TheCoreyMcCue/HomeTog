<div class="banner home-page-banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(' <%= image_path 'sky-house.jpg' %> ');">
  <div class="container">
    <h1 class="h1-mobile">
      Listing a home or apartment? Let's find you the perfect photographer!
    </h1>
    <div class="mt-3 d-flex justify-content-center w-100 ">
      <%= form_tag portfolios_path, method: :get do %>
        <div class="form-row">
          <div class="col-8 input-width">
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a photographer in your city"%>
          </div>
          <div class="col-4">
            <%= submit_tag "Search", class: "btn btn-primary w-100 custom-btn-home-page" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h2 class="text-center my-5">
   How it Works
  </h2>
  <div class="cards-wrapper d-flex justify-content-center align-items-start py-4">
