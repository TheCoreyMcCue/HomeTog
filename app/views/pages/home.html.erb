
<div class="banner home-page-banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(' <%= image_path 'sky-house.jpg' %> ');">
  <div class="container">
    <h1 class="h1-mobile">Listing a home or apartment? Let's find you the perfect photographer!</h1>

    <div class="mt-3 d-flex justify-content-center w-100 ">
      <%= simple_form_for :search, url: portfolios_path, method: :get do |f| %>
          <div class="form-row">
            <div class="col-8 input-width">
              <%= f.input :location, input_html: {type: "text", class: "form-control input-border", placeholder: "Location"}, label: false, wrapper: false %>
            </div>
            <div class="col-4">
              <%= f.submit "Search", class:"btn btn-primary w-100 custom-btn-home-page" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h2 class="text-center my-5">How it Works</h2>
  <div class="cards-wrapper d-flex justify-content-center ">
    <div class="card-content">
      <%= image_tag 'loupe.png', class: "card-image" %>
      <h3 class="mt-3">Easily Search</h3>
      <p class="text-center">Search for the best real estate
         photographers in your area</p>
    </div>

    <div class="card-content">
      <%= image_tag 'choose.png', class: "card-image" %>
      <h3 class="mt-3">Compare</h2>
      <p class="text-center">Compare all the
         available photograpers  based
         on your wants and needs.</p>
    </div>

    <div class="card-content">
      <%= image_tag 'calendar.png', class: "card-image" %>
      <h3 class="mt-3">Book</h2>
      <p class="text-center">Book a photographer
         in 3 simple steps.</p>
    </div>
  </div>
</div>

<div class="container">
  <h2 class="text-center my-5">Testimonials</h2>


</div>
