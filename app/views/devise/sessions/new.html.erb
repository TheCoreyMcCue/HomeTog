<div class="signin" style="background-image: url(' <%= image_path 'oldschool.jpg' %> ');">
  <h2 id="welcome-back">Welcome Back</h2>
  <div class="container">
    <div class="row d-flex justify-content-center">


      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary mb-3" %>
        </div>
      <% end %>
    </div>
  </div>


  <div class="container d-flex justify-content-center">
    <div class="row">
      <div class="col-12" id="lower-buttons">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "New to HomeTog? Sign up", new_registration_path(resource_name), class: "lower-buttons" %><br />
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "lower-buttons" %><br />
      <% end %>
      </div>
    </div>
  </div>
</div>

