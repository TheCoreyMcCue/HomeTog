<div class="register-body pt-4" style="background-image: url(' <%= image_path 'register.jpg' %> ');">
  <h1 id="signup">Welcome to HomeTog</h1>
  <div class="container registration-wrapper">
    <div class=" d-flex flex-column justify-content-center">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="row form-inputs">
            <div class="col-6">
              <%= f.input :first_name,
                          autofocus: true,
                          required: true,
                          placeholder: "What is your first name?" %>
            </div>
            <div class="col-6">
              <%= f.input :last_name,
                          autofocus: true,
                          required: true,
                          placeholder: "What is your last name?" %>
            </div>
            <div class="col-12">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          placeholder: "bob@gmail.com" %>
            </div>
            <div class="col-12">
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="col-12">
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="col-3">
              <label class="btn btn-info ">
                Add a profile picture
                <span style="display:none;">
                 <%= f.input :photo, as: :file %>
                </span>
              </label>
            </div>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-primary mb-3" %>
          </div>
        <% end %>
        <%- if controller_name != 'sessions' %>
          <%= link_to "Already a member? Log in", new_session_path(resource_name), class: "member-button mb-5" %><br />
        <% end %>
    </div>
  </div>
</div>


